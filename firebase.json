{
  "hosting": {
    "site": "ng-erp-3dcfb",
    "public": "dist",
    "redirects": [
      {
        "source": "**/api-pincode/:path",
        "destination": "https://api.postalpincode.in/pincode/:path",
        "type": 301
      }
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      },
      {
        "source": "/api/:path*",
        "destination": "https://giriraj-store.herokuapp.com/:path"
      }
    ],
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "headers": [ {
      "source": "**/*.@(eot|otf|ttf|ttc|woff|font.css)",
      "headers": [ {
        "key": "Access-Control-Allow-Origin",
        "value": "*"
      } ]
    }, {
      "source": "**/*.@(jpg|jpeg|gif|png)",
      "headers": [ {
        "key": "Cache-Control",
        "value": "max-age=84000"
      } ]
    }, {
      "source": "404.html",
      "headers": [ {
        "key": "Cache-Control",
        "value": "max-age=300"
      } ]
    }]
  },

  "emulators": {

    "hosting": {
      "port": 5000,
      "host": "0.0.0.0"
    }
  }
}
